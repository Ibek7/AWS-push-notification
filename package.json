{
  "name": "aws-push-notifications-tests",
  "version": "1.0.0",
  "description": "Test suite for AWS Push Notifications system",
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint tests/**/*.js",
    "lint:fix": "eslint tests/**/*.js --fix"
  },
  "devDependencies": {
    "@aws-sdk/client-sns": "^3.400.0",
    "@aws-sdk/client-lambda": "^3.400.0",
    "aws-sdk-mock": "^5.8.0",
    "jest": "^29.6.0",
    "supertest": "^6.3.0",
    "nock": "^13.3.0",
    "firebase-admin": "^11.10.0",
    "firebase-functions-test": "^3.1.0",
    "eslint": "^8.45.0",
    "eslint-config-standard": "^17.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  }
}